#include<stdio.h>
#include<stdlib.h>
#include<time.h>

void read_array ( int *a, int N );
void Insertion_sort ( int *a, int N );

int main(void)
{
    int i;
    int num,N;
    int *a;

    srand((unsigned)time(NULL));
    scanf("%d",&N);
    a = (int *)calloc(N,sizeof(int));

    for( i=0; i<N; i++)
        a[i] = rand()%(N*10);
    read_array(a,N);

    Insertion_sort(a,N);
    read_array(a,N);

    return 0;
}

void read_array( int *a, int N )
{
    int *p;
    for( p=a; p<=a+N-1; p++ )
        printf("%d->",*p);
    printf("\n");
}

void Insertion_sort( int *a, int N )
{
    int i,j;

    for( i=1; i<N; i++ ){                       //从a[1]开始，并渐渐增加
        int tmp = a[i];
        for( j=i; j>=1 && a[j-1]>tmp ; j-- ){   //遍历方向为向前
            a[j] = a[j-1];
        }
        a[j] = tmp;
    }
}
